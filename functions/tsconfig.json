{
  "compilerOptions": {
		"jsx": "react",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"types": ["react/next", "react-dom/next", "node"]
  },
	 "parserOptions": {
     "parser": "@typescript-eslint/parser",
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]	
}
